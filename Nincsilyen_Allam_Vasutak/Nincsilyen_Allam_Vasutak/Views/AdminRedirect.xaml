<Window x:Class="Nincsilyen_Allam_Vasutak.Views.AdminRedirect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nincsilyen_Allam_Vasutak.Views"
        mc:Ignorable="d"
        Title="AdminRedirect" Height="175" Width="400">
    <StackPanel>
        <Label Height="20"/>
        <Label Content="Omnem dimittite spem, o vos intrantes!" FontWeight="Bold" HorizontalAlignment="Center" FontSize="18"/>
        <Grid Margin="30, 10, 40, 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Admin felület kódja:"></Label>
            <TextBox Grid.Column="2" Name="tb_code"></TextBox>
        </Grid>
        <Button Content="Go!" Margin="100, 0, 100, 0" Click="btn_go_Click" Name="btn_go"></Button>
    </StackPanel>
</Window>
